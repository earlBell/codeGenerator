<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="${package}.dao.${modulename}.${className}Mapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="${package}.model.${modulename}.${className}" id="${classname}Map">
#foreach($column in $columns)
        <result property="${column.attrname}" column="${column.columnName}"/>
#end
    </resultMap>


    <sql id="listWhere">
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test="key != null and key.trim() != ''">
            </if>
        </trim>
    </sql>

    <sql id="idFor">
        <foreach item="${pk.attrname}" collection="${pk.attrname}s" open="(" separator="," close=")">
            #{${pk.attrname}}
        </foreach>
    </sql>

    <select id="allList" resultType="${package}.vo.resp.${modulename}.${className}PageResp">
        SELECT *
        FROM ${tableName}
    </select>


</mapper>