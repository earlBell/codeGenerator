<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="${package}.dao.${module}.${className}DAO">




    <sql id="whereField">
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test="key != null and key.trim() != ''">
            </if>
        </trim>
    </sql>

    <sql id="idFor">
        <foreach item="${pk.attrname}" collection="${pk.attrname}s" open="(" separator="," close=")">
            #{${pk.attrname}}
        </foreach>
    </sql>

    <select id="queryList" resultType="${package}.entity.${module}.${className}">
        SELECT * FROM ${tableName}
        <include refid="whereField"/>

    </select>


</mapper>